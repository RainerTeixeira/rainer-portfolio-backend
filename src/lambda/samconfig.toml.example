# Arquivo de configuração do SAM CLI
# Copie para samconfig.toml e ajuste conforme necessário
# ATENÇÃO: samconfig.toml deve estar no .gitignore (pode conter info sensível)

version = 0.1

[default]
[default.global.parameters]
stack_name = "blog-backend-api"

[default.build.parameters]
cached = true
parallel = true

[default.validate.parameters]
lint = true

[default.deploy.parameters]
capabilities = "CAPABILITY_IAM"
confirm_changeset = true
resolve_s3 = true
region = "us-east-1"
parameter_overrides = "Environment=dev"

[default.package.parameters]
resolve_s3 = true

[default.sync.parameters]
watch = true

[default.local_start_api.parameters]
warm_containers = "EAGER"

[default.local_start_lambda.parameters]
warm_containers = "EAGER"

# ═══════════════════════════════════════════════════════════════════════════
# AMBIENTES
# ═══════════════════════════════════════════════════════════════════════════

# Development
[dev]
[dev.global.parameters]
stack_name = "blog-backend-api-dev"

[dev.deploy.parameters]
capabilities = "CAPABILITY_IAM"
confirm_changeset = false
resolve_s3 = true
region = "us-east-1"
parameter_overrides = "Environment=dev"
tags = "Environment=dev Application=blog-backend-api"

# Staging
[staging]
[staging.global.parameters]
stack_name = "blog-backend-api-staging"

[staging.deploy.parameters]
capabilities = "CAPABILITY_IAM"
confirm_changeset = true
resolve_s3 = true
region = "us-east-1"
parameter_overrides = "Environment=staging"
tags = "Environment=staging Application=blog-backend-api"

# Production
[prod]
[prod.global.parameters]
stack_name = "blog-backend-api-prod"

[prod.deploy.parameters]
capabilities = "CAPABILITY_IAM"
confirm_changeset = true
resolve_s3 = true
region = "us-east-1"
parameter_overrides = "Environment=prod"
tags = "Environment=prod Application=blog-backend-api"

