import { IsString, IsOptional, IsBoolean, IsEnum } from 'class-validator';
import { UserPreferences } from './create-user.dto';

/**
 * DTO para atualização de usuário
 */
export class UpdateUserDto {
  @IsOptional()
  @IsString()
  nickname?: string;

  @IsOptional()
  @IsString()
  fullName?: string;

  @IsOptional()
  @IsString()
  avatar?: string;

  @IsOptional()
  @IsString()
  bio?: string;

  @IsOptional()
  @IsEnum(['ADMIN', 'EDITOR', 'AUTHOR', 'SUBSCRIBER'])
  role?: 'ADMIN' | 'EDITOR' | 'AUTHOR' | 'SUBSCRIBER';

  @IsOptional()
  @IsBoolean()
  isActive?: boolean;

  @IsOptional()
  @IsBoolean()
  isBanned?: boolean;

  @IsOptional()
  preferences?: UserPreferences;
}
