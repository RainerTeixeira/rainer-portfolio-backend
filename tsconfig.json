{
  "compilerOptions": {
    "allowJs": false,
    "module": "ESNext",
    "target": "ESNext",
    "lib": [
      "ES2020"
    ],
    "sourceMap": true,
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "types": [
      "node"
    ],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": [
    "src/**/*.ts", // Inclui todos os arquivos .ts da pasta src
    "testConnection.ts", // Inclui esse arquivo específico
    "src/aws-serverless-express.d.ts" // Inclui esse arquivo de definição de tipos
  ],
  "exclude": [
    "node_modules", // Exclui a pasta node_modules
    "**/*.spec.ts" // Exclui arquivos de testes
  ]
}