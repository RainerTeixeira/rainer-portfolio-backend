{
  "name": "rainer-portfolio-backend",
  "version": "3.0.0",
  "description": "Blog API - Backend NestJS Serverless",
  "author": "Rainer Teixeira",
  "private": true,
  "license": "MIT",
  "scripts": {
    "postinstall": "echo 'Skipping postinstall for SAM local build'",
    "build": "nest build",
    "dev": "tsx watch src/main.ts",
    "start": "node dist/main",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "prisma:generate": "prisma generate",
    "prisma:push": "prisma db push",
    "prisma:studio": "prisma studio",
    "prisma:format": "prisma format",
    "seed": "tsx src/prisma/mongodb.seed.ts",
    "dynamodb:create-tables": "tsx scripts/create-dynamodb-tables.ts",
    "dynamodb:seed": "tsx scripts/dynamodb.seed.ts",
    "dynamodb:list-tables": "aws dynamodb list-tables --endpoint-url http://localhost:8000",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:mongodb": "docker run -d --name blogapi-mongodb -p 27017:27017 mongo:7 --replSet rs0",
    "docker:dynamodb": "docker run -d --name blogapi-dynamodb -p 8000:8000 amazon/dynamodb-local",
    "sam:validate": "sam validate --template-file src/lambda/template.yaml",
    "sam:build": "sam build --template-file src/lambda/template.yaml --build-dir src/lambda/.aws-sam --no-cached --use-container --parameter-overrides Environment=dev",
    "sam:local": "sam local start-api --template-file src/lambda/template.yaml --port 4000 --parameter-overrides Environment=dev --skip-pull-image",
    "sam:deploy:dev": "sam deploy --template-file src/lambda/template.yaml --stack-name blog-api-dev --parameter-overrides Environment=dev --no-confirm-changeset",
    "sam:deploy:prod": "sam deploy --template-file src/lambda/template.yaml --stack-name blog-api-prod --parameter-overrides Environment=prod --no-confirm-changeset",
    "sam:logs": "sam logs --stack-name blog-api-dev --tail",
    "sam:delete:dev": "sam delete --stack-name blog-api-dev --no-prompts",
    "sam:delete:prod": "sam delete --stack-name blog-api-prod --no-prompts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --ignore-pattern src/lambda/.aws-sam/** --ignore-pattern src/lambda/.aws-sam-simple/**",
    "lint:fix": "eslint \"{src,apps,libs,test}/**/*.ts\" --ignore-pattern src/lambda/.aws-sam/** --ignore-pattern src/lambda/.aws-sam-simple/** --fix",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "clean": "rm -rf dist .aws-sam .nest",
    "version:update": "node scripts/08-memoria/update-version.js",
    "memory:update": "node scripts/08-memoria/update-memory.js",
    "memory:sync": "npm run version:update && npm run memory:update",
    "changelog": "npx tsx scripts/generate-changelog.ts",
    "version": "npx tsx scripts/generate-changelog.ts && git add docs/98-CHANGELOG.md package.json",
    "release": "npx tsx scripts/release-package.ts",
    "release:dry-run": "npx tsx scripts/release-package.ts --dry-run",
    "release:validate": "npx tsx scripts/release-package.ts --validate-only"
  },
  "dependencies": {
    "@aws-sdk/client-cognito-identity-provider": "^3.709.0",
    "@aws-sdk/client-dynamodb": "^3.709.0",
    "@aws-sdk/lib-dynamodb": "^3.709.0",
    "@fastify/helmet": "10.1.1",
    "@fastify/multipart": "7.7.3",
    "@fastify/middie": "8.3.3",
    "@fastify/cors": "8.3.0",
    "@fastify/aws-lambda": "^4.1.0",
    "@nestjs/common": "11.0.8",
    "@nestjs/core": "11.0.8",
    "@nestjs/platform-fastify": "11.0.8",
    "@nestjs/swagger": "11.2.3",
    "@nestjs/config": "^4.0.2",
    "@nestjs/passport": "^11.0.5",
    "@prisma/client": "^6.17.0",
    "@aws-sdk/util-dynamodb": "^3.709.0",
    "aws-lambda": "^1.0.7",
    "@types/mongodb": "^4.0.6",
    "axios": "^1.13.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "dotenv": "^17.2.3",
    "fastify": "4.28.1",
    "cloudinary": "^1.41.3",
    "rxjs": "^7.8.1",
    "nanoid": "^5.0.7",
    "passport-jwt": "^4.0.1",
    "mongodb": "^7.0.0",
    "pino": "^8.17.2",
    "pino-pretty": "^11.2.2",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.8",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.2",
    "@typescript-eslint/eslint-plugin": "^8.18.1",
    "@typescript-eslint/parser": "^8.18.1",
    "esbuild": "^0.24.2",
    "eslint": "^9.17.0",
    "jest": "^29.7.0",
    "prettier": "^3.4.2",
    "prisma": "^6.17.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "pnpm": {
    "overrides": {
      "fastify": "4.28.1",
      "@fastify/helmet": "10.1.1",
      "@fastify/multipart": "7.7.3",
      "@fastify/middie": "8.3.3",
      "@fastify/cors": "8.3.0",
      "@fastify/static": "6.12.0",
      "@nestjs/swagger": "11.2.3"
    }
  }
}
