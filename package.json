{
  "name": "@rainersoft/portfolio-backend",
  "version": "4.1.1",
  "description": "Blog Backend com NestJS + Fastify + DynamoDB + MongoDB + AWS Lambda",
  "main": "dist/main.js",
  "type": "commonjs",
  "author": {
    "name": "Rainer Teixeira",
    "email": "suporte@rainersoft.com.br",
    "url": "https://rainersoft.com.br"
  },
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=9.0.0"
  },
  "packageManager": "pnpm@9.0.0",
  "scripts": {
    "dev": "nest start --watch",
    "build": "tsc --project tsconfig.build.json",
    "start": "node dist/main.js",
    "start:prod": "node dist/main.js",
    "lint": "eslint src tests --ext .ts",
    "lint:fix": "eslint src tests --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"tests/**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "cross-env USE_REAL_DYNAMODB=true jest",
    "prisma:generate": "prisma generate --schema=src/database/mongodb/prisma/schema.prisma",
    "prisma:push": "prisma db push --schema=src/prisma/schema.prisma",
    "prisma:studio": "prisma studio --schema=src/prisma/schema.prisma",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:dynamodb": "docker-compose -f docker-compose.dynamodb.yml up -d",
    "sam:build": "pnpm run build && cd src/lambda && sam build",
    "sam:deploy": "pnpm run build && cd src/lambda && sam deploy",
    "sam:deploy:dev": "pnpm run build && cd src/lambda && sam deploy --config-env dev",
    "sam:deploy:staging": "pnpm run build && cd src/lambda && sam deploy --config-env staging",
    "sam:deploy:prod": "pnpm run build && cd src/lambda && sam deploy --config-env prod",
    "sam:local": "cd src/lambda && sam local start-api --port 4000",
    "sam:validate": "cd src/lambda && sam validate",
    "sam:logs": "cd src/lambda && sam logs --stack-name rainer-portfolio-backend-dev --tail",
    "sam:delete": "cd src/lambda && sam delete --stack-name rainer-portfolio-backend-dev",
    "sam:delete:dev": "cd src/lambda && sam delete --config-env dev",
    "sam:delete:staging": "cd src/lambda && sam delete --config-env staging",
    "sam:delete:prod": "cd src/lambda && sam delete --config-env prod",
    "dynamodb:create-tables": "tsx scripts/dynamodb.tables.ts",
    "dynamodb:seed": "tsx scripts/dynamodb.seed.ts",
    "mongodb:seed": "tsx scripts/mongodb.seed.ts",
    "prisma:seed": "tsx scripts/prisma.seed.ts",
    "seed": "tsx scripts/mongodb.seed.ts",
    "dynamodb:local:up": "docker-compose -f docker-compose.dynamodb.yml up -d",
    "dynamodb:local:down": "docker-compose -f docker-compose.dynamodb.yml down",
    "serverless:deploy": "powershell -ExecutionPolicy Bypass -File scripts/deploy-serverless.ps1",
    "serverless:test": "powershell -ExecutionPolicy Bypass -File scripts/test-local-serverless.ps1",
    "serverless:setup": "powershell -ExecutionPolicy Bypass -File scripts/install-sam-cli.ps1",
    "env:local": "powershell -ExecutionPolicy Bypass -File scripts/switch-env.ps1 -Environment local",
    "env:aws": "powershell -ExecutionPolicy Bypass -File scripts/switch-env.ps1 -Environment aws",
    "env:production": "powershell -ExecutionPolicy Bypass -File scripts/switch-env.ps1 -Environment production",
    "clean": "pnpm exec rimraf dist coverage .aws-sam node_modules/.cache",
    "clean:all": "pnpm run clean && pnpm exec rimraf node_modules",
    "postinstall": "pnpm run prisma:generate",
    "version:update": "tsx scripts/08-memoria/update-version.ts",
    "memory:update": "tsx scripts/08-memoria/update-memory.ts",
    "memory:sync": "pnpm run version:update && pnpm run memory:update"
  },
  "prisma": {
    "schema": "src/database/mongodb/prisma/schema.prisma"
  },
  "dependencies": {
    "@aws-sdk/client-cognito-identity-provider": "^3.913.0",
    "@aws-sdk/client-dynamodb": "^3.621.0",
    "@aws-sdk/lib-dynamodb": "^3.948.0",
    "@aws-sdk/util-dynamodb": "^3.621.0",
    "@fastify/aws-lambda": "^4.1.0",
    "@fastify/cors": "^9.0.1",
    "@fastify/helmet": "^12.0.0",
    "@fastify/multipart": "^9.3.0",
    "@fastify/static": "^8.3.0",
    "@fastify/swagger": "^8.15.0",
    "@fastify/swagger-ui": "^4.1.0",
    "@nestjs/common": "^11.1.6",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.1.6",
    "@nestjs/jwt": "^11.0.2",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-fastify": "^11.1.6",
    "@nestjs/swagger": "^11.2.0",
    "@prisma/client": "^6.17.1",
    "axios": "^1.13.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "cloudinary": "^2.8.0",
    "dotenv": "^16.4.5",
    "fastify": "^4.28.1",
    "jwks-rsa": "^3.2.0",
    "mongodb": "^7.0.0",
    "nanoid": "^5.0.4",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "pino": "^10.1.0",
    "pino-pretty": "^10.3.1",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@nestjs/cli": "^11.0.10",
    "@nestjs/testing": "^11.1.6",
    "@playwright/test": "^1.56.1",
    "@types/aws-lambda": "^8.10.159",
    "@types/jest": "^29.5.12",
    "@types/minimatch": "^6.0.0",
    "@types/node": "^22.2.0",
    "@types/passport-jwt": "^4.0.1",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "prettier": "^3.3.3",
    "prisma": "6.17.1",
    "rimraf": "^5.0.5",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.4",
    "ts-node": "^10.9.2",
    "tsx": "^4.17.0",
    "typescript": "^5.5.4"
  },
  "pnpm": {
    "overrides": {
      "@smithy/types": "4.10.0"
    }
  }
}
